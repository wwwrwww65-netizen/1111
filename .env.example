# --- Core API service ---
NODE_ENV=development
PORT=4000
API_FORCE_LISTEN=true
API_RUN_ENSURE_SCHEMA=false

# Secrets (replace in production)
JWT_SECRET=change_me_token
MAINTENANCE_SECRET=change_me

# Database URLs
DATABASE_URL=postgresql://ecom_user:password@127.0.0.1:5432/ecom_db?schema=public
DIRECT_URL=postgresql://ecom_user:password@127.0.0.1:5432/ecom_db?schema=public

# CORS and cookies
CORS_ALLOW_ORIGINS=https://admin.jeeey.com,https://jeeey.com,https://www.jeeey.com
COOKIE_DOMAIN=.jeeey.com

# Public URLs
NEXT_PUBLIC_APP_URL=https://jeeey.com
NEXT_PUBLIC_ADMIN_URL=https://admin.jeeey.com
NEXT_PUBLIC_API_URL=https://api.jeeey.com
