// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- User & Auth ---
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  fullName      String?
  role          UserRole  @default(CUSTOMER)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  orders        Order[]
  addresses     AddressBook[]
  wallet        WalletLedger[]
  points        PointLedger[]
  notifications NotificationLog[]
  vendor        Vendor?   @relation(fields: [vendorId], references: [id])
  vendorId      String?
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  VENDOR_ADMIN
  VENDOR_STAFF
  DRIVER
  CUSTOMER
}

// --- Products & Catalog ---
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  sku         String?  @unique
  stockQuantity Int    @default(0)
  images      String[] // Array of URLs
  isActive    Boolean  @default(true)
  
  // SEO Fields (Product specific)
  seoTitle       String?
  seoDescription String?
  
  // Loyalty
  pointsFixed    Int?     // Fixed points earned when buying this product
  pointsPercent  Float?   // Percent of price awarded as points
  loyaltyMultiplier Float? // Multiplier for this specific product
  excludeFromPoints Boolean @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  vendor      Vendor?   @relation(fields: [vendorId], references: [id])
  vendorId    String?
  orderItems  OrderItem[]
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  parentId    String?
  image       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
}

// --- Orders & Checkout ---
model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique // Human readable ID
  userId        String?
  status        OrderStatus @default(PENDING)
  totalAmount   Float
  currency      String      @default("SAR")
  
  // Payment
  paymentStatus PaymentStatus @default(UNPAID)
  paymentMethod String?

  // Shipping
  shippingAddress Json? // Snapshot of address
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User?       @relation(fields: [userId], references: [id])
  items         OrderItem[]
  shipment      Shipment?
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUNDED
  FAILED
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  unitPrice Float
  totalPrice Float

  // Relations
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

// --- Logistics & Shipping ---
model Shipment {
  id             String         @id @default(cuid())
  orderId        String         @unique
  trackingNumber String?
  status         ShipmentStatus @default(PREPARING)
  carrier        String?
  
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  // Relations
  order          Order          @relation(fields: [orderId], references: [id])
  legs           ShipmentLeg[]
}

enum ShipmentStatus {
  PREPARING
  PICKED_UP
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  FAILED
}

model ShipmentLeg {
  id          String    @id @default(cuid())
  shipmentId  String
  driverId    String?
  status      String    // e.g. "Assigned", "Completed"
  fromLat     Float?
  fromLng     Float?
  toLat       Float?
  toLng       Float?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  shipment    Shipment  @relation(fields: [shipmentId], references: [id])
  driver      Driver?   @relation(fields: [driverId], references: [id])
}

model Driver {
  id             String   @id @default(cuid())
  name           String
  phone          String   @unique
  licenseNumber  String?
  vehicleType    String?
  currentLat     Float?
  currentLng     Float?
  isOnline       Boolean  @default(false)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  legs           ShipmentLeg[]
}

// --- Vendors ---
model Vendor {
  id           String   @id @default(cuid())
  name         String   @unique
  contactEmail String?
  phone        String?
  address      String?
  storeName    String?
  storeNumber  String?
  vendorCode   String?  @unique
  isActive     Boolean  @default(true)
  
  // Loyalty configuration (vendor-level)
  loyaltyMultiplier Float?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  products     Product[]
  users        User[] // Vendor Staff/Admins
}

// --- Settings & Config ---
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- SEO System ---
model SeoPage {
  id              String   @id @default(cuid())
  slug            String   @unique
  titleSeo        String?
  metaDescription String?
  focusKeyword    String?
  canonicalUrl    String?
  metaRobots      String?  @default("index, follow")
  ogTags          Json?    // { title, description, image }
  twitterCard     Json?    // { title, description, image }
  schema          Json?    // JSON-LD
  hiddenContent   String?  // For SEO text at bottom
  isActive        Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// --- Redirects System (301/302) ---
model Redirect {
  id        String   @id @default(cuid())
  from      String   @unique // Old Slug
  to        String   // New Slug
  code      Int      @default(301)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

// --- Accounting & Finance ---
model Account {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  type      AccountType
  balance   Float    @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entries   JournalLine[]
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  REVENUE
  EXPENSE
}

model JournalEntry {
  id          String   @id @default(cuid())
  reference   String?
  description String?
  date        DateTime @default(now())
  posted      Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lines       JournalLine[]
}

model JournalLine {
  id             String       @id @default(cuid())
  journalEntryId String
  accountId      String
  debit          Float        @default(0)
  credit         Float        @default(0)
  description    String?
  
  // Relations
  journalEntry   JournalEntry @relation(fields: [journalEntryId], references: [id])
  account        Account      @relation(fields: [accountId], references: [id])
}

// --- Loyalty & Wallet ---
model PointLedger {
  id          String   @id @default(cuid())
  userId      String
  amount      Int      // Positive for earn, negative for spend
  reason      String?
  referenceId String?  // e.g. Order ID
  expiresAt   DateTime?
  
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

model WalletLedger {
  id          String   @id @default(cuid())
  userId      String
  amount      Float    // Positive for deposit/refund, negative for payment
  currency    String   @default("SAR")
  reason      String?
  referenceId String?
  
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

// --- Notifications ---
model NotificationLog {
  id        String   @id @default(cuid())
  userId    String?
  channel   String   // EMAIL, SMS, PUSH, WHATSAPP
  recipient String
  subject   String?
  body      String?
  status    String   // SENT, FAILED, QUEUED
  error     String?
  
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
}

// --- Address Book ---
model AddressBook {
  id           String   @id @default(cuid())
  userId       String
  label        String?  // Home, Work
  recipientName String?
  phone        String?
  addressLine1 String
  addressLine2 String?
  city         String
  state        String?
  zipCode      String?
  country      String   @default("SA")
  isDefault    Boolean  @default(false)
  lat          Float?
  lng          Float?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
}

// --- Media Assets ---
model MediaAsset {
  id        String   @id @default(cuid())
  url       String
  filename  String?
  mimeType  String?
  size      Int?
  altText   String?
  folder    String?  // e.g. "products", "banners"
  
  createdAt DateTime @default(now())
}
