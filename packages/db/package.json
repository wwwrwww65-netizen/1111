{
  "name": "@repo/db",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pnpm exec prisma generate && pnpm exec tsc -p tsconfig.json",
    "db:generate": "pnpm exec prisma generate",
    "db:migrate": "pnpm exec prisma migrate dev",
    "db:push": "pnpm exec prisma db push",
    "db:push:force": "pnpm exec prisma db push --accept-data-loss",
    "db:studio": "pnpm exec prisma studio",
    "db:seed": "pnpm exec ts-node prisma/seed.ts",
    "db:seed:admin-only": "pnpm exec ts-node prisma/seed-admin-only.ts",
    "db:reset": "pnpm exec prisma migrate reset --force",
    "db:deploy": "pnpm exec prisma migrate deploy",
    "lint": "echo \"Linting disabled for now\"",
    "test": "echo \"No tests specified for db package\"",
    "test:coverage": "echo \"No tests specified for db package\""
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "prisma": "^5.14.0",
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5",
    "eslint": "^8",
    "eslint-config-custom": "workspace:*",
    "ts-node": "^10.9.1",
    "@types/bcryptjs": "^2.4.6"
  }
}
