{
  "name": "ecom-platform",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @repo/db build && turbo build",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "web": "pnpm --filter web dev",
    "mobile": "pnpm --filter mobile start",
    "api": "pnpm --filter api dev",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:studio": "pnpm --filter @repo/db db:studio",
    "db:seed": "pnpm --filter @repo/db db:seed",
    "db:reset": "pnpm --filter @repo/db db:reset"
  },
  "devDependencies": {
    "@trpc/client": "^10.45.2",
    "@types/nodemailer": "^6.4.14",
    "node-fetch": "3",
    "prettier": "^3.2.5",
    "puppeteer": "^24.21.0",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@8.6.10",
  "pnpm": {
    "overrides": {
      "send": "^0.19.0",
      "serve-static": "^1.16.0",
      "body-parser": "^1.20.3",
      "cookie": "^0.7.0",
      "path-to-regexp": "^0.1.12",
      "next": "^14.2.32",
      "@expo/metro-config": "~0.18.11"
    }
  }
}
